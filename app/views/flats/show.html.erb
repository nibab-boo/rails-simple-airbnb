  <div class="jumbotron jumbotron-fluid mb-0 d-block" style="background: url(<%= @flat.picture_url %>);height: 300px; background-size:cover">
  </div>
  <div class="container mt-n5">
    <div class="row mt-n5">
      <div class="col-md-8">
        <div class="list-group-item border rounded mt--10 mb-3">
          <h2><%= @flat.name %></h2>
          <p class="text-muted"><%= @flat.address %></p>
        </div>
        <div class="list-group-item border rounded mb-3">
          <h4>A bit more about this flat...</h4>
          <p class="card-text" style="height:500px">
            <%= @flat.description %>
          </p>
        </div>
      </div>
      <div class="col-6 col-md-4">
        <div class="list-group-item border rounded mb-3">
          <h4>Book this place: </h4>
          <%= form_tag do %>
            <div class="input-group my-2">
              <div class="input-group-prepend">
                <div class="input-group-text">From: </div>
              </div>
              <%= date_field_tag :from_date, params[:from_date], class: "form-control" %>
            </div>
            <div class="input-group my-2">
              <div class="input-group-prepend">
                <div class="input-group-text">Tp: </div>
              </div>  
              <%= date_field_tag :to_date, params[:to_date], class: "form-control" %>
            </div>
            <%= submit_tag 'Book now!', class: "btn btn-success btn-block my-2" %>
          <% end %>
        </div>
        <div class="list-group-item border rounded mb-3">
          <p class="h4">Details</p>
          <p class="card-text h6">
            <i class="fas fa-users mr-1"></i><%= @flat.number_of_guests %>
            <i class="fas fa-euro-sign ml-3 mr-1"></i><%= @flat.price_per_night %>
          </p>
        </div>
        <div class="list-group-item d-flex h3 justify-content-between border rounded">
          <span>Share</span>
          <div class="inline-block">
            <i class="fab fa-facebook-square"></i>
            <i class="fab fa-twitter-square"></i>
            <i class="fab fa-pinterest-square"></i>
            <i class="fas fa-envelope-square"></i>
          </div>
        </div>
      </div>
    </div>
  </div>